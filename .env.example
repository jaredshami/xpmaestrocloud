# Application
NODE_ENV=development
APP_NAME=XP Maestro Cloud
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/xpmaestrocloud"
# Or for SQLite: DATABASE_URL="file:./prisma/dev.db"

# Domain Configuration
MAIN_DOMAIN=xpmaestrocloud.com
SUBDOMAIN_FORMAT=c{customerId}-i{instanceId}-{environment}.xpmaestrocloud.com

# VPS Configuration
VPS_USER=root
VPS_HOST=your-vps-ip
VPS_PORT=22
VPS_PRIVATE_KEY_PATH=/path/to/private/key
WWW_ROOT=/var/www/xpmaestrocloud
NGINX_CONF_DIR=/etc/nginx/sites-available

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRE=7d

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@xpmaestrocloud.com
ADMIN_PASSWORD=change-this-password

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
